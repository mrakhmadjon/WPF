<Window x:Class="WPFfirstProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFfirstProject"
        mc:Ignorable="d"
        Title="Congratulatnios .NET Birthday" Height="350" Width="800">
    <Grid Background="DarkBlue">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Background="#9615BE" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="14" FontSize="70" Foreground="Snow"/>
                <TextBlock Grid.Row="1" Text="February" FontSize="40" Foreground="Snow"/>
                <TextBlock Grid.Row="2" Text=".NET anniversary broadcast" FontSize="30" Foreground="Snow" />
                <TextBlock Grid.Row="3" Text="Date: February 14, 2022" FontSize="20" Foreground="Snow" />
                <TextBlock Grid.Row="4" Text="Time: 9:00 AM - 9:45 AM Pacific Time" FontSize="20" Foreground="Snow" />
                <TextBlock Grid.Row="5" Text="Location: Tune in right here" FontSize="20" Foreground="Snow"/>
            </Grid>
            
        </Button>

        <Button Grid.Column="1" Background="Snow" Margin="10">
            <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Height="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="39*"/>
                    <ColumnDefinition Width="40*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Hello" FontSize="100" FontStyle="Italic"  Height="16" Width="79" Grid.ColumnSpan="2" Margin="0,39,0,39"/>
            </Grid>
        </Button>

        <Button Grid.Column="2" Background="Snow" Margin="10">
            <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Height="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="39*"/>
                    <ColumnDefinition Width="40*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Hello" FontSize="100" FontStyle="Italic"  Height="16" Width="79" Grid.ColumnSpan="2" Margin="0,39,0,39"/>
            </Grid>
        </Button>
    </Grid>
</Window>
